<div id="registerForm" class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Create Account</h1>
        </div>
        <div class="auth-content">
            <form>
                <div class="form-group">
                    <label for="firstName">Username</label>
                    <input type="text" id="firstName" placeholder="Enter your Username">
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" placeholder="Enter your email address">
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" placeholder="Create a password">
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword" placeholder="Confirm your password">
                </div>

                <div class="form-group">
                    <label for="role">Role</label>
                    <select id="role">
                        <option value="">Select your role</option>
                        <option value="lecturer">Lecturer</option>
                        <option value="coordinator">Coordinator</option>
                        <option value="Managerr">Manager</option>
                    </select>
                </div>

            </form>

            <form method="post" action="/Registration/Index">
                <!-- form fields -->
                <button type="submit" class="btn btn-primary">
                    Create Account
                </button>
            </form>

            <div class="auth-toggle" style="display: flex; align-items: center; gap: 10px;">
                <p style="margin: 0;">Already have an account?</p>
                <a href="/Login/Index">Sign In</a>
            </div>
        </div>
    </div>
</div>
